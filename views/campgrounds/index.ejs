        features:<%-JSON.stringify(camps)%>
        };
    const users={
        features:<%-JSON.stringify(users)%>
        }
    const activeUser={
        features:<%-JSON.stringify(activeUser)%>
    }
</script>
<script src="/JS/search.js"></script>
<script src="/JS/indexMap.js"></script>
 