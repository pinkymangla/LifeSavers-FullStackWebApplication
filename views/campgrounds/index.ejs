<% layout('layouts/boilerplate') %>
<div  id="cluster-map" class="mb-3"></div>
<div class="container">
    <div class="row">
<h2 >Search for Resources</h2>
</div>
<div class="row">
<div class="input-group mb-3">
    <input type="text" class="form-control search-input" placeholder="Enter Organisation name" aria-label="search" aria-describedby="basic-addon2">
    <span class="btn btn-success input-group-text search-button" id="basic-addon2">Search</span>
</div>
</div>
</div>
<!-- <h1>Listed Campgrounds:</h1> -->
<!-- <a href="/campgrounds/new">Create New </a> -->
<div class="container">
<%for(let c of camps){%>
   <div class="card mb-3 camp-<%=c._id%>">
       <div class="row">
           <div class="col-md-4">
               <%if(c.images.length){%>
               <img src="<%=c.images[0].url%>" class="img-fluid imshow" alt="Org image">
               <%}else{%>
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTGL-jZE6rNI190ZjJIQoz-I7ZE4PBMmFEDxWDnqbhB2Q&s" class="img-fluid" alt="Org image">
                <%}%>
           </div>
           <div class="col-md-8">
               <div class="card-body">
                    <h5 class="card-title"><%=c.title%></h5>
                    <!-- <h5 class="card-title"><%=c.properties.popupMarkup%></h5> -->
                    <p class="card-text"><%=c.description%></p>
                    <p class="card-text">
                        <small class="text-muted"><%=c.location%></small>
                    </p>
                    <a href="/campgrounds/<%=c._id%>" class="btn btn-primary">View <%=c.title%></a>
               </div>
           </div>
       </div>
   </div>
<%}%>
</div>
<div class="container">
<%for(let u of users){%>
    <div class="card mb-3 ">
        <div class="row">
            <div class="col-md-2">
                
                 <img src="https://www.shutterstock.com/image-photo/headshot-portrait-smiling-african-american-260nw-1667439898.jpg" class="img-fluid" alt="Org image">
             
            </div>
            <div class="col-md-3">
                <div class="card-body">
                  
                     <h5 
                     class="card-title"><%=u.username%></h5>
                   
                     <p class="card-text">Blood Group: <%=u.bloodGroup%></p>
                  
                     <a href="/user/<%=u._id%>" class="btn btn-primary">View <%=u.username%></a>
                </div>
            </div>
        </div>
    </div>
 <%}%>
</div>


